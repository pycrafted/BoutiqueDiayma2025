@model P2FixAnAppDotNetCode.Models.Order

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h2 class="mb-0"><i class="fa fa-shopping-bag"></i> @Localizer["OrderTitle"]</h2>
                <p class="mb-0 mt-2"><small>@Localizer["EnterDetails"]</small></p>
            </div>
            <div class="card-body">
                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <i class="fa fa-exclamation-circle"></i> @TempData["ErrorMessage"]
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                }
                
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                
                <form asp-action="Index" method="post">
                    <div class="form-section mb-4">
                        <h4 class="text-primary border-bottom pb-2">
                            <i class="fa fa-user"></i> @Localizer["ShipTo"]
                        </h4>
                        <div class="form-group">
                            <label asp-for="Name" class="font-weight-bold">
                                @Localizer["Name"] <span class="text-danger">*</span>
                            </label>
                            <input asp-for="Name" class="form-control form-control-lg" placeholder="Entrez votre nom complet" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-section mb-4">
                        <h4 class="text-primary border-bottom pb-2">
                            <i class="fa fa-map-marker-alt"></i> @Localizer["Adress"]
                        </h4>
                        <div class="form-group">
                            <label asp-for="Address" class="font-weight-bold">
                                @Localizer["Location"] <span class="text-danger">*</span>
                            </label>
                            <input asp-for="Address" class="form-control form-control-lg" placeholder="Numéro et nom de rue" />
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                        
                        <div class="row">
                            <div class="form-group col-md-4">
                                <label asp-for="City" class="font-weight-bold">
                                    @Localizer["City"] <span class="text-danger">*</span>
                                </label>
                                <input asp-for="City" class="form-control form-control-lg" placeholder="Ville" />
                                <span asp-validation-for="City" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-4">
                                <label asp-for="Zip" class="font-weight-bold">
                                    @Localizer["Zip"]
                                </label>
                                <input asp-for="Zip" class="form-control form-control-lg" placeholder="Code postal" />
                                <span asp-validation-for="Zip" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-4">
                                <label asp-for="Country" class="font-weight-bold">
                                    @Localizer["Country"] <span class="text-danger">*</span>
                                </label>
                                <input asp-for="Country" class="form-control form-control-lg" placeholder="Pays" />
                                <span asp-validation-for="Country" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="alert alert-info">
                        <i class="fa fa-info-circle"></i> <strong>@Localizer["ShipSoon"]</strong>
                    </div>

                    <div class="text-center mt-4">
                        <button type="submit" class="btn btn-primary btn-lg px-5">
                            <i class="fa fa-check-circle"></i> @Localizer["CompleteOrder"]
                        </button>
                        <a asp-action="Index" asp-controller="Cart" class="btn btn-outline-secondary btn-lg ml-2">
                            <i class="fa fa-arrow-left"></i> Retour au panier
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
