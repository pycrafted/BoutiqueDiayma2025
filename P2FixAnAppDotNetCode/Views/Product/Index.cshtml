@using P2FixAnAppDotNetCode.Models
@model IEnumerable<P2FixAnAppDotNetCode.Models.Product>
@{
    ViewData["Title"] = Localizer["ProductList"];
}

<div class="products-container">
    <div class="page-header mb-4">
        <h1 class="display-4 text-primary">
            <i class="fa fa-store"></i> @Localizer["ProductList"]
        </h1>
        <p class="lead text-muted">Découvrez notre sélection de produits de qualité</p>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center py-5">
            <i class="fa fa-inbox fa-3x mb-3 text-primary"></i>
            <h4>Aucun produit disponible</h4>
            <p class="text-muted">Les produits seront bientôt disponibles.</p>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (Product p in Model)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="product-card card h-100 shadow-sm">
                        <div class="card-body d-flex flex-column">
                            <div class="product-header mb-3">
                                <h5 class="card-title text-primary mb-2">
                                    <i class="fa fa-box-open"></i> @p.Name
                                </h5>
                                <p class="card-text text-muted small">@p.Description</p>
                            </div>
                            
                            <div class="product-info mt-auto">
                                <div class="d-flex justify-content-between align-items-center mb-3">
                                    <div>
                                        <span class="text-muted small">Prix</span>
                                        <h4 class="text-primary mb-0 font-weight-bold">
                                            @p.Price.ToString("c")
                                        </h4>
                                    </div>
                                    <div class="text-right">
                                        @if (p.Stock > 10)
                                        {
                                            <span class="badge badge-success badge-lg">
                                                <i class="fa fa-check-circle"></i> @p.Stock en stock
                                            </span>
                                        }
                                        else if (p.Stock > 0)
                                        {
                                            <span class="badge badge-warning badge-lg">
                                                <i class="fa fa-exclamation-triangle"></i> @p.Stock restant(s)
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-danger badge-lg">
                                                <i class="fa fa-times-circle"></i> Rupture
                                            </span>
                                        }
                                    </div>
                                </div>
                                
                                <form asp-action="AddToCart" asp-controller="Cart" method="post" class="mt-auto">
                                    <input type="hidden" name="id" value="@p.Id" />
                                    @if (p.Stock > 0)
                                    {
                                        <button type="submit" class="btn btn-primary btn-block btn-add-cart">
                                            <i class="fa fa-cart-plus"></i> @Localizer["AddToCart"]
                                        </button>
                                    }
                                    else
                                    {
                                        <button type="button" class="btn btn-secondary btn-block" disabled>
                                            <i class="fa fa-ban"></i> Indisponible
                                        </button>
                                    }
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
