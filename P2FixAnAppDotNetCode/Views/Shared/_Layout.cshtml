<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet"
          asp-href-include="/lib/bootstrap/dist/**/*.min.css"
          asp-href-exclude="**/*-reboot*,**/*-grid*" />
    <link rel="stylesheet" asp-href-include="/lib/fontawesome/css/*.css" />
    @*<link rel="stylesheet" asp-href-include="/css/*.css" />*@
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <title>@ViewData["Title"] - ESP EHOD 2025</title>
</head>
<body>
    <div class="navbar navbar-inverse bg-primary" role="navigation">
        <div class="row">
            <a class="col navbar-brand" asp-action="Index" asp-controller="Product" style="padding-left:12%">
                Boutique Diayma
            </a>
            <div class="col-4 text-right" style="padding-right:12%">
                @await Component.InvokeAsync("CartSummary")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @* Affichage des messages de succès et d'erreur *@
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["SuccessMessage"]
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @TempData["ErrorMessage"]
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }
        @RenderBody()
        <hr />
        <footer>
            <div class="row">
                <div class="col-8"><p style="padding-top:17px">&copy; 2025 - ESP EHOD 2025</p></div>
                <div class="col-4">
                    @await Component.InvokeAsync("LanguageSelector")
                </div>
            </div>
        </footer>
    </div>

    @RenderSection("Scripts", required: false)
</body>
</html>
